<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  app:cardCornerRadius="12dp"
  android:elevation="4dp"
  app:cardBackgroundColor="#F8C5C5">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
      android:id="@+id/tv_add_friend_ID"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/friend_id"
      android:textSize="24sp" />
    <TextView
      android:id="@+id/tv_add_friend_mail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/friend_email"
      android:textSize="24sp" />
    <TextView
      android:id="@+id/tv_add_friend_account"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/friend_account"
      android:textSize="24sp" />
  </LinearLayout>

</androidx.cardview.widget.CardView>
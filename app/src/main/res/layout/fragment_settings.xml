<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#F5F5F5"
  tools:context=".main_fragments.SettingsFragment">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="24dp"
      android:gravity="center_horizontal">

      <Button
        android:id="@+id/btn_excel"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:text="📊 Excel 匯出" />

      <Button
        android:id="@+id/btn_userFriends"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:text="👥 朋友" />

      <Button
        android:id="@+id/btn_add_friend"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:text="➕ 加朋友" />

      <Button
        android:id="@+id/btn_github"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:text="💻 GitHub 匯出" />

      <Button
        android:id="@+id/btn_about"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:text="📖 關於我們" />

      <Button
        android:id="@+id/btn_changeLanguage"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:text="切換語言" />
      <Button
        android:id="@+id/btn_projectNumber"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:text="已建立_個專案" />

      <Button
        android:id="@+id/btn_delAccount"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:text="刪除帳號"
        android:textColor="@color/design_default_color_error"
        app:rippleColor="#BF1919"
        app:strokeColor="#8D4848" />

      <Button
        android:id="@+id/btn_logout"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:elevation="2dp"
        android:text="🚪 登出"
        android:textColor="#F44336" />

    </LinearLayout>
  </ScrollView>
</FrameLayout>
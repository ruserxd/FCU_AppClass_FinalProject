<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".EditIssueActivity">

  <TextView
      android:id="@+id/edit_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="16dp"
      android:text="@string/EditIssue_Topic"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edit_issue" />

  <TextView
      android:id="@+id/edit_issue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:background="#00FFDBDB"
      android:text="@string/EditIssue_Title"
      android:textSize="34sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/ed_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="32dp"
    android:ems="10"
    android:inputType="text"
    android:text="null"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/edit_name" />

  <TextView
      android:id="@+id/edit_summary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="8dp"
      android:text="@string/EditIssue_Status"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ed_name" />

  <EditText
    android:id="@+id/ed_summary"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="32dp"
    android:ems="10"
    android:inputType="text"
    android:text="null"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/edit_summary" />

  <TextView
      android:id="@+id/edit_stime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="8dp"
      android:text="@string/EditIssue_StartTime"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ed_summary" />

  <EditText
    android:id="@+id/ed_start_time"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="32dp"
    android:ems="10"
    android:inputType="date"
    android:text="null"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/edit_stime" />

  <TextView
      android:id="@+id/edit_etime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="8dp"
      android:text="@string/EditIssue_EndTime"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ed_start_time" />

  <EditText
    android:id="@+id/ed_end_time"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="32dp"
    android:ems="10"
    android:inputType="date"
    android:text="null"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/edit_etime" />

  <TextView
      android:id="@+id/edit_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="8dp"
      android:text="@string/EditIssue_StartTime"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ed_end_time" />

  <Spinner
    android:id="@+id/spin_EditStatus"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toEndOf="@+id/ed_end_time"
    app:layout_constraintStart_toStartOf="@+id/ed_end_time"
    app:layout_constraintTop_toBottomOf="@+id/edit_status" />

  <TextView
      android:id="@+id/edit_designee"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="8dp"
      android:text="@string/EditIssue_Designee"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/spin_EditStatus" />

  <EditText
    android:id="@+id/ed_designee"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="32dp"
    android:ems="10"
    android:inputType="text"
    android:text="null"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/edit_designee" />

  <Button
      android:id="@+id/ed_btn_save"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="60dp"
      android:backgroundTint="#81D4FA"
      android:text="@string/EditIssue_Save"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ed_designee" />

  <Button
      android:id="@+id/ed_btn_cancel"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_marginStart="60dp"
      android:layout_marginTop="32dp"
      android:backgroundTint="#F48FB1"
      android:text="@string/EditIssue_Discard"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ed_designee" />

</androidx.constraintlayout.widget.ConstraintLayout>